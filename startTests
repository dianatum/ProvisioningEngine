perform_tests(){
  echo "Datetime: `date`"
  echo ""
  echo "git info:"
  git branch
  git log -n 1
  echo ""

  bundle exec rspec -f d spec/requests/system_settings_spec.rb "$@"
  bundle exec rspec -f d spec/requests/provisioningobjects_spec.rb "$@"
}

#rake db:migrate RAILS_ENV=test
