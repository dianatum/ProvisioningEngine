                        <h4 style="color:green; background-color:white; opacity: 0.6; position:fixed; top:90px; right:20px;"> **foreground mode** </h4>
                      <% end %>


                      <%= yield %>
                      <% if false # for the moment, not active (until migrated from development to production... %> 
